<div class="row center-align">
<h3>Work, Work, Work</h3>

<div class="row">
    <div class="input-field col offset-s4 s4">
        <select id="workInquiry">
            <option value="" disabled selected>Choose Your Option</option>
            <option id="1" value="Work">Yes</option>
            <option id="2" value="2">No</option>
        </select>
        <label>Did You Work Today?</label>
    </div>
</div>

<div class="row center-align">
    <div id="workingHours" class="input-field col offset-s4 s4 hidden">
        <input id="hoursVal" placeholder="" type="text" class="validate">
        <label for="first_name">How Many Hours?</label>
    </div>
</div>

<div class="row center-align">
    <div id="workingMins" class="input-field col offset-s4 s4 hidden">
        <input id="minsVal" placeholder="" type="text" class="validate">
        <label for="first_name">How Many Minutes?</label>
    </div>
</div>

<button id="submitBtn" class="btn waves-effect waves-light" type="submit" name="action">
    <i class="material-icons right">send</i>
</button>
</div>

